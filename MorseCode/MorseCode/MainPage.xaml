<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorseCode.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Morse Code" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="word" Text="" FontSize="Large"></Label>
        <Label x:Name="morseLabel" Text="" FontSize="Header"></Label>
        <Button Text="." Clicked="DotClick"></Button>
        <Button Text="-" Clicked="DashClick"></Button>
        <Button Text=" " Clicked="SpaceClick"></Button>
        
        
    </StackLayout>

</ContentPage>
